{
  "name": "exampleProgram",
  "version": "1.0.0",
  "description": "an example program.",
  "author": "genshen <genshenchu@gmail.com>",
  "commands": {
    "debug": "cmake ../",
    "release": "cmake ../",
    "test": "cmake ../"
  },
  "compilers": {
    "cc": "clang",
    "cxx": "clang++"
  },
  "packages": {
    "git": {
      "googletest": {
        "path": "https://github.com/google/googletest.git",
        "tag": "release-1.8.0"
      },
      "kiwi": {
        "path": "https://git.gensh.me/genshen/kiwi.git"
      }
    },
    "files": {
      "agrs": {
        "path": "https://raw.githubusercontent.com/vietjtnguyen/argagg/master/include/argagg/",
        "files": {
          "argagg.hpp": "argagg.hpp"
        },
        "build": [
          "CP argagg.hpp {INCLUDE}"
        ]
      },
      "nlohmann": {
        "path": "https://github.com/nlohmann/json/releases/download/v3.1.2/",
        "files": {
          "json.hpp": "json.hpp"
        },
        "build": [
          "CP json.hpp {INCLUDE}"
        ]
      }
    }
  }
}
