{
  "name": "exampleProgram",
  "version": "1.0.0",
  "description": "an example program.",
  "author": "genshen <genshenchu@gmail.com>",
  "commands": {
    "debug": "cmake ../",
    "release": "cmake ../",
    "test": "cmake ../"
  },
  "compilers": {
    "cc": "clang",
    "cxx": "clang++"
  },
  "packages": {
    "git": {
      "googletest": {
        "path": "https://github.com/google/googletest.git",
        "tag": "release-1.8.0"
      },
      "kiwi": {
        "path": "https://git.gensh.me/genshen/kiwi.git",
        "hash": "3694d4194a5e3f26484cc42285653d080b966d6c"
      }
    },
    "files": {
      "nlohmann": {
        "path": "https://github.com/nlohmann/json/raw/v3.1.2/single_include/nlohmann",
        "files": {
          "json.hpp": "json.hpp"
        },
        "build": [
          "CP json.hpp {INCLUDE}"
        ]
      }
    }
  },
  "build": {
    "linux": [
      "RUN {CACHE} cmake {SRC_DIR} -DCMAKE_INSTALL_PREFIX={PKG_DIR}; make -j4; make install"
    ]
  },
  "cmake_lib": "include_directories({CMAKE_VENDOR_PATH_PKG}/include)\nlink_directories({CMAKE_VENDOR_PATH_PKG}/lib)"
}
